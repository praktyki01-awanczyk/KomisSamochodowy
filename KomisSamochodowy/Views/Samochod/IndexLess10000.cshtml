@model IEnumerable<KomisSamochodowy.Models.Samochod>

@{
    ViewData["Title"] = "IndexLess10000";
}

<h1>Tańsze niż 10 000</h1>

<p>

    <a asp-action="Index">Wyświetl wszystko</a>
    <a asp-action="IndexBetween">Wyświetl od 10 001 do 50 000</a>
    <a asp-action="IndexMore">Wyświetl droższe niż 50 000</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Kolor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PojemnoscSilnika)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Przebieg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumerVin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nadwozie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paliwo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Kolor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PojemnoscSilnika)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Przebieg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumerVin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cena)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marka.Nazwa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marka.Nazwa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nadwozie.Nazwa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Paliwo.Nazwa)
                </td>
               
            </tr>
        }
    </tbody>
</table>
